
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LugaresVisitados.EditarLugar"
             Title="Editar lugar">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">

            <Entry x:Name="nombreEntry" 
                   Placeholder="Nombre"
                   HeightRequest="100"/>


            <Entry x:Name="descripcionEntry" 
                   Placeholder="DescripciÃ³n"
                   HeightRequest="100"/>

            <DatePicker x:Name="fechaVisitaPicker" />

            <Entry x:Name="imagenUrlEntry"
                   Placeholder="URL de la imagen" />

            <Image x:Name="previewImagen"
                   HeightRequest="200"
                   Aspect="AspectFill"/>

            <Button Text="Guardar cambios"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    Clicked="Guardar_Clicked"/>

            <Button Text="Cancelar"
                    BackgroundColor="Gray"
                    TextColor="White"
                    Clicked="Cancelar_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
